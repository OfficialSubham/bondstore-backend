{
  "compilerOptions": {
    "target": "ES2020", // Doesnâ€™t matter much, but keep modern
    "module": "nodenext", // Same, since we only care about types
    "declaration": true, // Generate .d.ts files
    "emitDeclarationOnly": true, // Only emit .d.ts (no .js output)
    "outDir": "dist", // Where .d.ts files go
    "strict": true, // Enforce good type definitions
    "esModuleInterop": true, // Safe default
    "skipLibCheck": true // Avoid headaches with dependencies
  },
  "include": ["src"], // Your TS source folder
  "exclude": ["node_modules", "dist", "tests"]
}
